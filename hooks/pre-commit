#/bin/sh

main() {
        check_formatting \
                && check_clippy
}

check_formatting() {
        echo "Validating proper formatting with rustfmt";
        OUTPUT=$(cargo fmt -- --check);
        ERROR_CODE=$?;

        if [[ $ERROR_CODE -gt 0 ]]
                then
                        echo "The following files have improper formatting"
                        echo "$OUTPUT" | sed "s|$PWD/||g"
                        exit $ERROR_CODE
                        fi
}

check_clippy() {
        echo "See what clippy thinks";
        OUTPUT=$(find -name "*.rs" -not -path "./target/*" -exec touch "{}" + && cargo clippy -- -D warnings);
        ERROR_CODE=$?;

        if [[ $ERROR_CODE -gt 0 ]]
                then
                        echo "Clippy didn't like what it saw"
                        echo "$OUTPUT" | sed "s|$PWD/||g"
                        exit $ERROR_CODE
                        fi
}
main
